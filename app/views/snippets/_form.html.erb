
<ul>
  <% @snippet.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>

<div class="row">
  <div class="form-group-lg col-md-6 col-md-offset-3">
    <%= form_for @snippet do |f| %>

    <div class = "form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class = "form-group">
      <%= f.label :work %>
      <%= f.text_area :work, class: "form-control" %>
    </div>

    <div class = "form-group">
      <%= f.label :language %>
      <%= f.collection_select(:kind_id, Kind.all, :id, :language, class: "form-control") %>
    </div>

    <div class= "form-group">
      <%= f.label :priv_snippet, "Private?" %>
      <%= f.check_box :priv_snippet %>
    </div>

    <div class = "form-group">
      <%= f.submit "Post Snippet!", class: "btn btn-large btn-primary" %>
    </div>
    <% end %>
  </div>
</div>
