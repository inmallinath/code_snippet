<h1>Add a Language</h1>

<ul>
  <% @kind.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>

<div class="row">
  <div class="form-group-lg col-md-6 col-md-offset-3">
    <%= form_for @kind do |f| %>

    <div class = "form-group">
      <%= f.label :language %>
      <%= f.text_field :language, class: "form-control" %>
    </div>

    <div class = "form-group">
      <%= f.submit "Add Language!", class: "btn btn-large btn-primary" %>
    </div>
    <% end %>
  </div>
</div>
